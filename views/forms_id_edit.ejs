<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./includes/head.ejs")  %> 
</head>
<body>
    <%- include("./includes/header.ejs")  %> 
    <section class="FormEdit">
        <table class="FormEdit_data">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="data-name"><%= locals.form.name %></td>
                    <td class="data-author"><%= locals.form.author %></td>
                    <td class="data-description"><%= locals.form.description %></td>
                </tr>
            </tbody>
        </table>
        <div class="FormEdit_Editor">
            <h3 class="Editor_title">Editar Formulario:</h3>
            <form method="post" class="Editor" id="editorForm">
                <div class="Editor_field">
                    <label for="">Nombre:</label>
                    <input type="text" name="name" class="data-name" value="<%=locals.form.name%>">
                </div>
                <div class="Editor_field">
                    <label for="">Autor:</label>
                    <input type="text" name="author" class="data-author" value="<%=locals.form.author%>">
                </div>
                <div class="Editor_field">
                    <label for="">Descripción:</label>
                    <textarea 
                        name="description" 
                        id="description" 
                        cols="30" 
                        rows="10"
                        class="data-description"
                    ><%=locals.form.description%></textarea>
                </div>
                <div class="Editor_action">
                    <input type="submit" value="Guardar">
                </div>
            </form>
        </div>
    </section>
    <%- include("./includes/footer.ejs")  %> 
</body>
</html>